<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ModificarCupon"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:id="@+id/btnatras"
                android:layout_width="35dp"
                android:layout_height="27dp"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/ic_arrow_back" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actualizar Cupon"
                android:textColor="#000000"
                android:textSize="32sp"
                android:layout_gravity="top|center"
                android:translationY="10dp"/>


            <ImageView
                android:id="@+id/imagenlogo"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/ic_image"
                android:layout_gravity="top|center"
                android:translationY="70dp"/>

            <Button
                android:id="@+id/btnseleccionar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_botonazul"
                android:shadowColor="@android:color/transparent"
                android:text="Actualizar Foto"
                android:textColor="#FFFFFF"
                android:layout_gravity="top|center"
                android:translationY="85dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos Generales"
                android:textColor="#000000"
                android:layout_gravity="top|center"
                android:translationY="110dp"/>

            <EditText
                android:id="@+id/txttitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/shape_textboxregistro"
                android:drawableLeft="@drawable/ic_title"
                android:drawablePadding="10dp"
                android:hint="Titulo"
                android:padding="15dp"
                android:textColor="#003152"
                android:textColorHighlight="#0F77F6"
                android:textColorHint="#DDDEE0"
                android:singleLine="true"
                android:layout_gravity="top|center"
                android:translationY="120dp"/>


            <EditText
                android:id="@+id/txtdescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/shape_textboxregistro"
                android:drawableLeft="@drawable/ic_assignment"
                android:drawablePadding="10dp"
                android:hint="Descripcion"
                android:padding="15dp"
                android:textColor="#003152"
                android:textColorHighlight="#0F77F6"
                android:textColorHint="#DDDEE0"
                android:singleLine="true"
                android:layout_gravity="top|center"
                android:translationY="130dp"/>

            <EditText
                android:id="@+id/txtporcentajedescuento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/shape_textboxregistro"
                android:drawableLeft="@drawable/ic_sale"
                android:drawablePadding="10dp"
                android:hint="Porcentaje de Descuento"
                android:padding="15dp"
                android:textColor="#003152"
                android:textColorHighlight="#0F77F6"
                android:textColorHint="#DDDEE0"
                android:singleLine="true"
                android:layout_gravity="top|center"
                android:translationY="140dp"/>

            <EditText
                android:id="@+id/txtfechainicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/shape_textboxregistro"
                android:drawableLeft="@drawable/ic_event_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Fecha de Inicio"
                android:padding="15dp"
                android:textColor="#003152"
                android:textColorHighlight="#0F77F6"
                android:textColorHint="#DDDEE0"
                android:singleLine="true"
                android:layout_gravity="top|center"
                android:translationY="150dp"/>

            <EditText
                android:id="@+id/txtfechafinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/shape_textboxregistro"
                android:drawableLeft="@drawable/ic_event_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Fecha Final"
                android:padding="15dp"
                android:textColor="#003152"
                android:textColorHighlight="#0F77F6"
                android:textColorHint="#DDDEE0"
                android:singleLine="true"
                android:layout_gravity="top|center"
                android:translationY="160dp"/>
            <Spinner
                android:id="@+id/spinnerestado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:translationY="170dp"
                android:padding="4dp"

                android:background="@drawable/gradient_spinner"
                />


            <Button
                android:id="@+id/btnmodificarcupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_botonnaranja"
                android:padding="15dp"
                android:shadowColor="@android:color/transparent"
                android:text="Actualizar Datos"
                android:textColor="#FFFFFF"
                android:layout_gravity="top|center"
                android:translationY="180dp"/>




        </LinearLayout>

    </FrameLayout>

</ScrollView>