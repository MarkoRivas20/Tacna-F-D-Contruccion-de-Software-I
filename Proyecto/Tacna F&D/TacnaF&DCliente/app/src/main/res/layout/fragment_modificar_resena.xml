<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ModificarResena">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2F2F2"
            android:orientation="vertical"
            android:layout_marginBottom="66dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="20dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/lblnombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="titulo"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="#000000">

            </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calificar este establecimiento"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F8F8F8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Las reseñas son públicas"
                        android:textSize="18dp"
                        android:layout_marginBottom="10dp">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="El nombre de tu perfil se mostrara con la reseña. Los usuarios y el dueño del establecimiento podran ver tu comentario a menos que lo borres."
                        android:justificationMode="inter_word"
                        android:layout_marginBottom="20dp">

                    </TextView>

                </LinearLayout>



                <RatingBar
                    android:id="@+id/rbcalificacion"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:theme="@style/RatingBar"
                    android:layout_gravity="center"
                    android:saveEnabled="true"
                    android:layout_marginBottom="20dp"
                    >

                </RatingBar>
                <EditText
                    android:id="@+id/txtcomentario"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@drawable/shape_textboxregistro"
                    android:drawableLeft="@drawable/ic_assignment"
                    android:drawablePadding="10dp"
                    android:hint="Comentario"
                    android:padding="15dp"
                    android:textColor="#003152"
                    android:textColorHighlight="#0F77F6"
                    android:layout_marginBottom="20dp"
                    >

                </EditText>

                <Button
                    android:id="@+id/btnmodificarresena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_botonazul"
                    android:padding="15dp"
                    android:text="Actualizar"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="5dp"
                    android:shadowColor="@android:color/transparent"
                    ></Button>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="#CCCCCC"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <Button
                android:id="@+id/btnestablecimientos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/ic_store_select"
                android:text="Buscar"
                android:textColor="#E96D54" />

            <ImageView
                android:id="@+id/imgseparacionrutadetalle21"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:background="#D9D9D9" />

            <Button
                android:id="@+id/btnprincipal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/ic_home"
                android:text="Inicio"
                android:textColor="#DBDBDB" />

            <ImageView
                android:id="@+id/imgseparacionrutadetalle22"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:background="#D9D9D9" />

            <Button
                android:id="@+id/btnperfil"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/ic_person"
                android:text="Perfil"
                android:textColor="#DBDBDB" />




        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>